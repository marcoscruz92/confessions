
<!-- This p is needed for rails alerts -->
<p id="notice"><%= notice %></p>
<%= link_to 'Back', confessions_path, class: "btn btn-info" %>

<div class="row">
	<!-- Div that contains description of the confession -->
	<div class="col-md-offset-3 col-md-6 center">
		<div class="boxx panel panel-default">
			<div class="panel-body">
				<%= @confession.description %> 
			</div>
			<div class="panel-footer">
				<i class="fa fa-trophy">
                  <%= pluralize @confession.reputation_for(:votes).to_i, "vote" %> 
                </i>
                <i class="fa fa-thumbs-up">
				 <%= link_to "Like", vote_confession_path(@confession, type: "up") , method: "post" %>
				</i>
				<i class="fa fa-thumbs-down">
				  <%= link_to "Dislike", vote_confession_path(@confession, type: "down") , method: "post" %>
				</i>
				
			</div>
			
		</div>
		<!-- Div that contains the voting system of the confessions -->

	</div>
</div>
<span class='st_facebook_hcount' displayText='Facebook'></span>

<%= link_to  @confession, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } do %>
		<i class="fa fa-trash">Delete</i>


